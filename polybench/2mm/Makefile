EXAMPLE_NAME := 2mm
SRC := 2mm.c
LDFLAGS := -lm -ldl

# Size configurations - can be overridden via command line
# LARGE (64-core): 4096 (64x64). EXTRALARGE (1920-worker): 7680 (4x1920). 6.6x LARGE
SMALL_CFLAGS ?= -DSMALL_DATASET
MEDIUM_CFLAGS ?= -DSTANDARD_DATASET
LARGE_CFLAGS ?= -DNI=4096 -DNJ=4096 -DNK=4096 -DNL=4096
EXTRALARGE_CFLAGS ?= -DNI=7680 -DNJ=7680 -DNK=7680 -DNL=7680

include ../carts.mk
