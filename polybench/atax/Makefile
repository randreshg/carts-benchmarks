EXAMPLE_NAME := atax
SRC := atax.c
EXTRA_CFLAGS := -DM_PI=3.14159265358979323846
LDFLAGS := -lm -ldl

# Size configurations - can be overridden via command line
# LARGE (64-core): 40000 (625x64). EXTRALARGE (1920-worker): 80640 (42x1920). 4.06x LARGE
SMALL_CFLAGS ?= -DSMALL_DATASET
MEDIUM_CFLAGS ?= -DSTANDARD_DATASET
LARGE_CFLAGS ?= -DNX=40000 -DNY=40000
EXTRALARGE_CFLAGS ?= -DNX=80640 -DNY=80640

include ../carts.mk
